root = true

[*]
charset = utf-8
indent_style = tab
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{html,svg}]
indent_style = tab

[*.js]
indent_style = tab

[*.md]
trim_trailing_whitespace = false

[*.min.*]
indent_style = ignore
trim_trailing_whitespace = false
insert_final_newline = ignore

[*.json]
indent_size = 2
indent_style = tab
